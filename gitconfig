[alias]
  st = status -sb
  ci = commit
  all = commit -am
  br = branch
  co = checkout
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[push]
  default = current
[pull]
  rebase = true
[includeIf "gitdir:~/git/github/"]
  path = .gitconfig.github
[includeIf "gitdir:~/git/work/"]
  path = .gitconfig.work
